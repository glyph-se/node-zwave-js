{
	"packages": [
		"packages/*"
	],
	"useWorkspaces": true,
	"npmClient": "yarn",
	"version": "8.0.3-beta.0",
	"command": {
		"run": {
			"stream": true
		},
		"version": {
			"allowBranch": [
				"master",
				"release-*",
				"next"
			],
			"ignoreChanges": [
				"*.md"
			],
			"exact": true,
			"amend": true,
			"push": false
		}
	}
}
